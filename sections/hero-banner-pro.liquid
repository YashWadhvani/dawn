{% schema %}
{
  "name": "Hero Banner Pro",
  "settings": [
    {
      "type": "select",
      "id": "media_type",
      "label": "Background Type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" },
        { "value": "carousel", "label": "Carousel" }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image - Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image - Mobile"
    },
    {
      "type": "video",
      "id": "video_upload",
      "label": "Upload Video (MP4)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Unleash Your Style"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "New season. New arrivals. Same bold energy."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "select",
      "id": "animation_type",
      "label": "Text Animation",
      "options": [
        { "value": "fade", "label": "Fade In" },
        { "value": "slide", "label": "Slide Up" },
        { "value": "zoom", "label": "Zoom In" },
        { "value": "none", "label": "None" }
      ],
      "default": "fade"
    },
    {
      "type": "checkbox",
      "id": "parallax",
      "label": "Enable Parallax Effect",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "scroll_reveal",
      "label": "Enable Scroll-based Reveal Animations",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Page Width Mode",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Pro"
    }
  ]
}
{% endschema %}

{% style %}
  .hero-banner {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    z-index: 1;
    background-color: #000;
  }

  .hero-banner video,
  .hero-banner picture img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
  }

  .hero-banner.carousel .hero-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 100%;
  }

  .hero-banner .hero-overlay {
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    max-width: 800px;
    padding: 20px;
  }

  .hero-content h1, .hero-content p, .hero-content a {
    transition: all 0.6s ease-in-out;
    opacity: 0;
    transform: translateY(20px);
  }

  .hero-content.fade h1,
  .hero-content.fade p,
  .hero-content.fade a {
    animation: fadeIn 1s forwards;
  }

  .hero-content.slide h1,
  .hero-content.slide p,
  .hero-content.slide a {
    animation: slideUp 1s forwards;
  }

  .hero-content.zoom h1,
  .hero-content.zoom p,
  .hero-content.zoom a {
    animation: zoomIn 1s forwards;
  }

  @keyframes fadeIn {
    to { opacity: 1; transform: none; }
  }

  @keyframes slideUp {
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes zoomIn {
    to { opacity: 1; transform: scale(1); }
  }

  {% if section.settings.parallax %}
  .hero-banner {
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  {% endif %}

  {% if section.settings.full_width %}
  .hero-banner {
    height: 100vh;
  }
  {% endif %}
{% endstyle %}

<section class="hero-banner {% if section.settings.media_type == 'carousel' %}carousel{% endif %}">
  {% if section.settings.media_type == 'video' and section.settings.video_upload %}
    <video autoplay muted loop playsinline>
      <source src="{{ section.settings.video_upload | file_url }}" type="video/mp4">
    </video>
  {% elsif section.settings.media_type == 'carousel' %}
    <div class="hero-slide">
      <picture>
        <source media="(max-width: 749px)" srcset="{{ section.settings.image_mobile | image_url: width: 750 }}">
        <img src="{{ section.settings.image_desktop | image_url: width: 1500 }}" alt="Hero Slide">
      </picture>
    </div>
    <!-- Add more slides if needed -->
  {% else %}
    <picture>
      <source media="(max-width: 749px)" srcset="{{ section.settings.image_mobile | image_url: width: 750 }}">
      <img src="{{ section.settings.image_desktop | image_url: width: 1500 }}" alt="Hero Background">
    </picture>
  {% endif %}

  <div class="hero-overlay"></div>

  <div class="hero-content {{ section.settings.animation_type }}">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.show_cta %}
      <a
        href="{{ section.settings.cta_link }}"
        class="cta-button"
        style="background:#fff;color:#000;padding:10px 25px;display:inline-block;margin-top:20px;"
      >
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</section>
